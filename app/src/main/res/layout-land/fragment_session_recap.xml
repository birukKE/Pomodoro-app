<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SessionRecap"
    android:background="@drawable/recap_page">

    <Button
        android:id="@+id/photoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="128dp"
        android:text="Take photo"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/photoView2"
        app:layout_constraintTop_toBottomOf="@+id/sessionBtn"
        app:layout_constraintVertical_bias="0.77" />

    <ImageView
        android:id="@+id/photoView1"
        android:layout_width="161dp"
        android:layout_height="255dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/photoView2"
        android:layout_width="161dp"
        android:layout_height="255dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photoView1"
        tools:src="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/star2"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/star1"
        app:layout_constraintTop_toBottomOf="@+id/photoView1"
        app:srcCompat="@drawable/star" />

    <ImageButton
        android:id="@+id/star3"
        android:layout_width="92dp"
        android:layout_height="95dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/star2"
        app:layout_constraintTop_toBottomOf="@+id/photoView2"
        app:srcCompat="@drawable/star" />

    <ImageButton
        android:id="@+id/star1"
        android:layout_width="88dp"
        android:layout_height="95dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoView1"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/averageTextView"
        android:layout_width="187dp"
        android:layout_height="48dp"
        android:layout_marginStart="448dp"
        android:layout_marginTop="60dp"
        android:padding="1dp"
        android:text="In session recap"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sessionBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/sessionInfo"
        android:layout_width="295dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sessionBtn"
        app:layout_constraintStart_toEndOf="@+id/photoView2"
        app:layout_constraintTop_toBottomOf="@+id/averageTextView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/sessionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="228dp"
        android:text="Start\nsession"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/photoView2"
        app:layout_constraintTop_toBottomOf="@+id/averageTextView" />

    <ImageButton
        android:id="@+id/homeButtonRecap"
        android:layout_width="58dp"
        android:layout_height="61dp"
        android:layout_marginStart="544dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_home_24" />

</androidx.constraintlayout.widget.ConstraintLayout>