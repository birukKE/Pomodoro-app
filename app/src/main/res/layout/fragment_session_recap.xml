<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SessionRecap"
    android:background="@drawable/recap_page">

    <TextView
        android:id="@+id/averageTextView"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="80dp"
        android:padding="1dp"
        android:text="In session recap"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sessionInfo"
        android:layout_width="347dp"
        android:layout_height="67dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/averageTextView" />

    <Button
        android:id="@+id/photoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="116dp"
        android:text="Take photo"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/photoView1"
        android:layout_width="140dp"
        android:layout_height="218dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/photoView2"
        android:layout_width="140dp"
        android:layout_height="218dp"
        android:layout_marginStart="206dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/sessionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="112dp"
        android:text="Start\nsession"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/photoButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/star1"
        android:layout_width="88dp"
        android:layout_height="95dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/sessionBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@null"
        app:srcCompat="@drawable/star" />

    <ImageButton
        android:id="@+id/star2"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/sessionBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/star" />

    <ImageButton
        android:id="@+id/star3"
        android:layout_width="92dp"
        android:layout_height="95dp"
        android:layout_marginStart="268dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/sessionBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/star" />

    <ImageButton
        android:id="@+id/homeButtonRecap"
        android:layout_width="58dp"
        android:layout_height="61dp"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="48dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_home_24" />


</androidx.constraintlayout.widget.ConstraintLayout>